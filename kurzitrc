#!/usr/bin/env bash

# Load Appropriate Alias Scripts based on $DIST
function Load_Aliases () {
    # General Bash Aliases
    for fn in $(find $kurzit_home/aliases/ -name "*.Bash"); do
        . $fn
    done

    # Distro Specific
    for fn in $(find $kurzit_home/aliases/ -name "*.$DIST"); do
        . $fn
    done
}

Load_Aliases